<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCategorySingle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_cat1"
        android:layout_alignParentLeft="true"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textTitleSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgCategorySingle"
        android:text="Lorem Ipsum"
        android:layout_toRightOf="@+id/imgCategorySingle"
        android:padding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textDescSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleSingle"
        android:layout_toRightOf="@+id/imgCategorySingle"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris tempus suscipit mauris at mattis. "
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        app:fontFamily="sans-serif" />
</RelativeLayout>
